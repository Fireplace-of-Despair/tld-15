@page
@using Common.Composition
@model TLD15.Pages.Account.LoginFeature
@{
    ViewData[Globals.Page.Title] = $"{LoginFeature.PageName} | {Globals.Brand.Title}";
    ViewData[Globals.OpenGraph.Url] =
        $"https://{ViewContext.HttpContext.Request.Host}" +
        $"{ViewContext.HttpContext.Request.Path}";
}

<form id="loginForm" method="post" class="component-container">
    <div class="login-container">
        <input asp-for="Model.Login" placeholder="Login" autocomplete="off" />
        <input asp-for="Model.Password" placeholder="Password" autocomplete="off" />

        <span asp-validation-for="Model.Login" class="text-danger"></span>
        <button aria-label="@Globals.Controls.Login" type="submit">Log in</button>
    </div>
</form>