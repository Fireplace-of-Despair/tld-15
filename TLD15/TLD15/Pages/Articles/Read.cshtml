@page "{idFriendly}"
@using Common.Composition
@using TLD15.Pages.Shared.Components.ArticleRead
@model TLD15.Pages.Articles.ReadFeature
@{
    ViewData[Globals.Page.Title] = $"{Model.Model.Title} | {Globals.Brand.Title}";
    ViewData[Globals.OpenGraph.Url] =
    $"https://{ViewContext.HttpContext.Request.Host}" +
            $"{ViewContext.HttpContext.Request.Path}";
}

@await Component.InvokeAsync(nameof(ArticleRead), new { model = new ArticleRead.Model
    {
        Content = Model.Model.Content,
        CreatedAt = Model.Model.CreatedAt,
        Title = Model.Model.Title,
        DivisionCode = Model.Model.DivisionCode,
        ContentHtml = Model.Model.ContentHtml,
        SubTitle = Model.Model.SubTitle,
        PosterAlt = Model.Model.PosterAlt,
        PosterUrl = Model.Model.PosterUrl,
        Version = Model.Model.Version
    }})
