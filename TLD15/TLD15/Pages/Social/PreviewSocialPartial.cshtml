@using Common.Composition
@using System.Globalization
@using TLD15.Utils
@model TLD15.Pages.Social.PreviewSocialPartialModel

@if (Model.Data.Any())
{
    <h2 class="component-title" id="@TLD15.Pages.Contacts.PreviewContactsPartialModel.Anchor">
        @Model.Title
    </h2>

    <div class="social-container">
        @foreach (var link in @Model.Data)
        {
            <a role="button" href="@link.Url">
                <img class="social-button"
                     src="@IconHelper.GetIcon(link.Name)"
                     alt="@link.Name"
                     aria-labelledby="@link.Name">
            </a>
        }
    </div>
}
