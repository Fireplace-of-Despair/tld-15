@model TLD15.Pages.Lore.PreviewLoreModel

@if (!Model.ModelState.IsValid)
{
    <div class="component-container">
        <h2 id="@PreviewLoreModel.MetaPublic.Id" class="component-title">@PreviewLoreModel.MetaPublic.Title</h2>

        <div class="lore-content">
            @foreach (var error in Model.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    </div>

    return;
}

@if (Model.Data != null)
{
    <div class="component-container">
        <h2 id="@PreviewLoreModel.MetaPublic.Id" class="component-title">@PreviewLoreModel.MetaPublic.Title</h2>

        <div class="lore-content">
            <div class="lore-content-image">
                <img loading="lazy"
                     aria-labelledby="@Model.Data!.PosterAlt"
                     src="@Model.Data!.PosterUrl" alt="@Model.Data!.PosterAlt">
            </div>
            <div class="lore-content-text">
                @Html.Raw(@Model.Data!.ContentHtml)
            </div>
        </div>
    </div>
}