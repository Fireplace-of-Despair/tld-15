@page
@using System.Globalization
@using TLD15.Composition
@using TLD15.Pages.Accounts

@model TLD15.Pages.Press.ManageModel

@{
    ViewData[Globals.Page.Title] = $"{EditModel.Meta.Title} | {Globals.Brand.Title}";
}

<div class="component-container">
    <div class="tab-panel tab-panel-active" id="content-tab1">
        <form id="#main-form" class="article-edit" method="post">
            <input type="hidden" asp-for="@Model.Data.Version" />

            <input readonly id="id" type="text" asp-for="@Model.Data.Id" placeholder="Id">

            <textarea id="content" asp-for="@Model.Data.Data" placeholder="Content" cols="40" rows="5"></textarea>
        </form>
    </div>

    <span asp-validation-for="@Model.Data" class="text-danger"></span>
    <button onclick="submitForm()">@Globals.Controls.Save</button>
</div>

<script>
    function submitForm() {
        var form = document.getElementById("#main-form");
        form.submit();
    }
</script>