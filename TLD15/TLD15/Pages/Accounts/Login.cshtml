@page
@using TLD15.Composition
@using TLD15.Helpers

@model TLD15.Pages.Accounts.LoginModel
@{
    ViewData[Globals.Page.Title] = $"{Globals.Brand.Title} | {LoginModel.Meta.Title}";

    ViewData[Globals.Page.OpenGraph.Url] = Model.Host.TrimLast('/') + ViewContext.HttpContext.Request.Path;
    ViewData[Globals.Page.OpenGraph.Image] = $"{Model.Host}logo.png";
    ViewData[Globals.Page.OpenGraph.Locale] = Globals.Settings.Locale;
}

<form id="loginForm" method="post" class="component-container">
    <div class="login-container">
        <input asp-for="Model.Login" placeholder="Login" autocomplete="off" />
        <input asp-for="Model.Password" placeholder="Password" autocomplete="off" />

        <span asp-validation-for="Model" class="text-danger"></span>
        <button aria-label="@Globals.Controls.Login" type="submit">Log in</button>
    </div>
</form>